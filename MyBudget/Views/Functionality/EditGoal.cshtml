@model Goal

@{
    string title = ViewBag.Action;
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="EditGoal" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="IncomeGoal">Income</label>
        <input asp-for="IncomeGoal" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="BudgetGoal">Budget</label>
        <input asp-for="BudgetGoal" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="SavingGoal">Saving</label>
        <input asp-for="SavingGoal" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="GoalMonth">Date</label>
        <input type="month" asp-for="GoalMonth" class="form-control">
    </div>



    <input type="hidden" asp-for="GoalID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>

</form>
