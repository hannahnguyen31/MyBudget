@model Income

@{
    string title = ViewBag.Action ;
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="EditIncome" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="IncomeSource">Category</label>
        <input asp-for="IncomeSource" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input asp-for="Amount" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="IncomeMonth">Date</label>
        <input type ="datetime-local"  asp-for="IncomeMonth" class="form-control">
    </div>



    <input type="hidden" asp-for="IncomeID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>

</form>
