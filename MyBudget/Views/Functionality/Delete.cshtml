@model Budget

@{
    ViewBag.Title = "Delete Budget";
}

<h3>Do you want to delete this Budget permanently</h3>
<h3>@Model.Category (@Model.Budgeted)</h3>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BudgetID">
    <button type="submit" class="btn btn-success">Delete</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-success">Cancel</a>
</form>

