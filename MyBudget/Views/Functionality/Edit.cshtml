@model Budget

@{
    string title = ViewBag.Action + " " + " Budget";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Category">Category</label>
        <input asp-for="Category" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Budgeted">Budgeted</label>
        <input asp-for="Budgeted" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Activity">Activity</label>
        <input asp-for=" Activity" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Available">Available</label>
        <input asp-for=" Available" class="form-control">
    </div>


    <input type="hidden" asp-for="BudgetID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>

</form>
